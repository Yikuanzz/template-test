# 环境变量配置文件
# 复制此文件为 .env 并根据需要修改
# 此文件存储敏感信息，不应提交到版本控制系统

# ================== 服务器配置 ==================
# 服务器运行模式: debug, release, test
SERVER_MODE=debug

# ================== 数据库配置 ==================
# 数据库主机地址
DB_HOST=localhost
# 数据库端口
DB_PORT=3406
# 数据库用户名
DB_USER=root
# 数据库密码
DB_PASSWORD=root123
# 数据库名称
DB_NAME=go_template_db

# ================== Redis 配置 ==================
# Redis 主机地址
REDIS_HOST=localhost
# Redis 端口
REDIS_PORT=6379
# Redis 密码 (如果为空则留空)
REDIS_PASSWORD=
# Redis 数据库编号
REDIS_DB=0

# ================== Etcd 配置 ==================
# Etcd 连接地址 (多个地址用逗号分隔)
ETCD_ENDPOINTS=localhost:2379
# Etcd 连接超时时间 (秒)
ETCD_DIAL_TIMEOUT=5

# ================== 监控配置 ==================
# Prometheus 配置
PROMETHEUS_NAMESPACE=go_template
PROMETHEUS_SUBSYSTEM=service
PROMETHEUS_METRICS_PATH=/metrics

# Jaeger 配置
JAEGER_SERVICE_NAME=go-template-service
JAEGER_ENVIRONMENT=development
JAEGER_URL=http://localhost:14268/api/traces
JAEGER_SAMPLE_RATIO=1.0
JAEGER_DISABLED=false

# ================== 日志配置 ==================
# 日志级别: debug, info, warn, error
LOG_LEVEL=info
# 日志输出格式: json, console
LOG_FORMAT=console

# ================== 安全配置 ==================
# JWT 密钥 (生产环境请使用强密码)
JWT_SECRET=your-secret-key-here
# JWT 过期时间 (小时)
JWT_EXPIRE_HOURS=24

# ================== 第三方服务配置 ==================
# 邮件服务配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-email-password

# 短信服务配置
SMS_ACCESS_KEY=your-sms-access-key
SMS_SECRET_KEY=your-sms-secret-key

# 对象存储配置
OSS_ENDPOINT=https://oss.example.com
OSS_ACCESS_KEY=your-oss-access-key
OSS_SECRET_KEY=your-oss-secret-key
OSS_BUCKET=your-bucket-name
